{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "allowJs": true,
        "checkJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": false,
        "declaration": true,
        "emitDeclarationOnly": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "paths": {
            "unocss-preset-scrollbar": [
                "./src"
            ]
        }
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}